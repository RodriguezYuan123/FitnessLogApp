@model List<FitnessLog.Domain.Workout> // Expecting a List of Workout objects
@using System.Globalization // For formatting the date

@{
    ViewData["Title"] = "Workout History";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="LogWorkout" class="btn btn-primary">Log New Workout</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>You haven't logged any workouts yet.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Exercise Name</th>
                <th>Reps</th>
                <th>Duration (Minutes)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExerciseName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Reps)</td>
                    <td>@Html.DisplayFor(modelItem => item.DurationInMinutes)</td>
                </tr>
            }
        </tbody>
    </table>
}